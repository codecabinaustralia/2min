
<div>  
  <div class="grid-x">
    <div class="cell small-12 medium-4 medium-offset-4 inner-form">
      <h2>Let's get your profile updated shall we?</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        
        <% if params[:pkey].present? %>
        <div class="field">
          <%= f.hidden_field :email, value: current_user.email %>
        </div>
        <% else %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.hidden_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% end %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <label>Select a password</label>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
        
        <% if params[:pkey].present? %>
        <div class="field">
          <label>Repeat password</label>
          <%= f.hidden_field :current_password, autocomplete: "off", value: session[:pkey] %>
        </div>
        <% else %>
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
        <% end %>

        <div class="actions text-right">
          <%= f.submit "Save Login Details", class: "button large success expanded" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    </div>
  </div>
</div>
