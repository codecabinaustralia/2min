<div class="grid-container" style="margin-top: 40px;">
<div class="grid-x grid-margin-x text-center">
	
	<div class="cell small-12 medium-10 medium-offset-1 outer-form text-center">
		<h2>Start by choosing a template</h2>     
		<h3>You can preview each template by clicking on them. </h3>
	</div>

	<div class="cell small-12 inner-form text-center" style="margin-top: 40px;">
      	 
		<div class="grid-x grid-margin-x grid-margin-y" style="margin-top: 20px;">
			<% @templates.each do |template| %>
		    	<div class="cell small-12 medium-4">
		    		<%= link_to template_path(template) do %>
		    		<div class="template-whole">
					    <div class="template-image-container">
					      <%= image_tag template.image, height: '250', width: '400' %>
					    </div>
					    <div class="template-image-container-bottom">
					    	<i class="fas fa-desktop"></i> Preview template
					    </div>
				    </div>
				    <% end %>
		    	</div>
		    	
			<% end %>
		</div>

    </div>

    
</div>
</div>

<embed src="https://res.cloudinary.com/thypowerhouse/video/upload/v1537563363/2minute/audio/2_template.mp3">