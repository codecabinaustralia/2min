		<div class="grid-container">
			<div class="grid-x grid-margin-x">
				<div class="cell small-12 medium-6">
					<h2>Contact Us</h2><a class="button expanded large primary" style="<%= @site.color.color_1 %>" href="tel:<%= @site.phone %>"><i class="fa fa-phone"></i> <%= @site.phone %><br></a> <!-- Map -->
					<div class="cell small-12" style="margin-top: 40px;">
						<h4>We service all Sydney locations</h4>
						<div class="map-responsive">
							<iframe allowfullscreen frameborder="0" height="650" src="https://maps.google.com/maps?q=<%= @site.home_town %>=&z=13&ie=UTF8&iwloc=&output=embed" style="border:0" width="1920"></iframe>
						</div>
					</div>
				</div>
				<div class="cell small-12 medium-6">
					<h4>Request a quote</h4>
					<%= render 'messages/form', message: @message, color: @color %>
				</div>
			</div>
		</div>
	</div>
