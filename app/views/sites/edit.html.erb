<div>  
  <div class="grid-x">
    <div class="cell small-12 medium-4 medium-offset-4 inner-form">
      <h2>Let's update your digits</h2>

      <!-- If site exists only show edit button else show new form -->
      <% if @existing_site.present? %>
      <%= link_to "Edit Site", edit_site_path(@existing_site), class: "button large primary" %>
      <% else %>
        <%= form_for @site do |form| %>
          <% if @site.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>

              <ul>
              <% @site.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
        <% @site.template_name != "multi" %>
        <div class="file-upload-box">
          We need a hero image, this can be taken from your phone now or you can upload one. Just click the button to add an image.<hr />
          <%= form.file_field :featured_image %>
        </div>
        <% end %>

          <div class="field">
            <%= form.hidden_field :company_name, value: session[:company] %>
          </div>

          <div class="grid-x">
            <div class="cell small-12"> 
            ABN
            <%= form.text_field :abn %>
            </div>
          </div>

          <div class="field">
            Your clients need somewhere to call!
            <%= form.text_field :phone,placeholder: "Mobile Number" %>
          </div>

          <div class="field">
            What city or town do you operate in?
            <%= form.text_field :home_town, placeholder: "Sydney" %>
          </div>

          <div class="field">
            What trade are you in?
            <%= form.collection_select(:trade_id, Trade.all, :id, :title, prompt: true) %>
          </div>

          <div class="field">
            <%= form.hidden_field :user_id, value: current_user.id %>
          </div>

          <div class="actions float-right">
            <%= form.submit "I'm done here", class: "button large primary" %>
          </div>
        <% end %>
      <% end %>


    </div>
  </div>
</div>
