<div>  
  <div class="grid-x">
    <div class="cell small-12 medium-4 medium-offset-4 inner-form">
      <h2>Where can we send messages from your future clients?</h2>
      template: <%= session[:template_id] %>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <% @random_string = SecureRandom.hex %>
      <% session[:pkey] = @random_string %>
        <h3><%= session[:company] %> is going to kill it! I can tell.</h3> 
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Email address" %>
        </div>
        
        <% if session[:company].blank? %>
        <div class="field">
          <%= f.text_field :subdomain, value: session[:company], placeholder: "What's your company name" %>
        </div>
        <% else %>
        <div class="field">
          <%= f.hidden_field :subdomain, value: session[:company] %>
        </div>
        <% end %>

        <div class="field" style="display: none;">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, value: @random_string, autocomplete: "off" %>
        </div>

        <div class="field" style="display: none;">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, value: @random_string, autocomplete: "off" %>
        </div>

        <div class="actions float-right">
          <%= f.submit "Okay, next step", class: "button large primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

