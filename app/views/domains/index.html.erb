<div>  
  <div class="grid-x">
    <div class="cell small-12 medium-4 medium-offset-4 inner-form">
      <h2>Search for a new domain?</h2>      
      <h3>If not, don't worry we'll add this placeholder logo for the time being.</h3>
    <%= render 'form', intro: @intro, color: @color %>
    </div>
  </div>
</div>


<h1>Domains</h1>

<table>
  <thead>
    <tr>
      <th>Domain name</th>
      <th>Dns simple</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.domain_name %></td>
        <td><%= domain.dns_simple_id %></td>
        <td><%= link_to 'Show', domain %></td>
        <td><%= link_to 'Edit', edit_domain_path(domain) %></td>
        <td><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_domain_path %>
